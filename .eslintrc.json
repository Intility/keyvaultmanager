{
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "extends": [
    "prettier",
    "plugin:node/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "node/no-unpublished-require": [
      "error",
      {
        "allowModules": [
          "@azure/logger",
          "@azure/identity-vscode"
        ]
      }
    ]
  }
}